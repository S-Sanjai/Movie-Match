:root {
    --bg-color: #0c0c0c;
    --card-bg: #111111;
    --border-color: #333333;
    --primary-color: #22c55e;
    /* Matrix Green / Terminal Green */
    --text-primary: #ffffff;
    --text-secondary: #888888;
    --font-main: 'Inter', sans-serif;
    --font-mono: 'Courier New', Courier, monospace;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-main);
    background-color: var(--bg-color);
    color: var(--text-primary);
    min-height: 100vh;
    overflow-x: hidden;
    /* Engineering Grid Background */
    background-image:
        linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
}

/* --- Container & Header --- */
.container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 1rem 0 3rem;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 3rem;
}

.logo-section h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-primary);
    letter-spacing: -2px;
    line-height: 1;
}

.tagline {
    color: var(--primary-color);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    letter-spacing: 1px;
    margin-top: 0.5rem;
    text-transform: uppercase;
}

.header-links {
    display: flex;
    gap: 1.5rem;
}

.social-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.3s;
    border: 1px solid var(--border-color);
    padding: 0.5rem 1rem;
    border-radius: 4px;
}

.social-link:hover {
    color: var(--primary-color);
    border-color: var(--primary-color);
    background: rgba(34, 197, 94, 0.1);
}

/* --- Tech Specs Banner --- */
.tech-specs-banner {
    display: flex;
    gap: 2rem;
    margin-bottom: 4rem;
    flex-wrap: wrap;
}

.tech-spec {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    border-left: 2px solid var(--border-color);
    padding-left: 1rem;
}

.spec-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-secondary);
    letter-spacing: 1px;
}

.spec-value {
    font-weight: 600;
    font-size: 1rem;
    color: var(--text-primary);
}

/* --- Search Section --- */
.search-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 4rem;
}

.search-box {
    position: relative;
    width: 100%;
    max-width: 600px;
}

.search-box input {
    width: 100%;
    padding: 1.25rem 1.5rem;
    padding-right: 4rem;
    font-size: 1.1rem;
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 0;
    /* Minimalist sharp corners */
    color: white;
    font-family: var(--font-mono);
    transition: all 0.3s ease;
}

.search-box input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 1px var(--primary-color);
}

.search-box button {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    transition: color 0.3s;
}

.search-box button:hover {
    color: var(--primary-color);
}

.error-message {
    text-align: center;
    color: #ef4444;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    margin-top: 1rem;
    height: 1.5rem;
}

/* --- Hero Section (Searched Movie) --- */
.hero-section {
    position: relative;
    width: 100%;
    min-height: 500px;
    background-size: cover;
    background-position: center top;
    margin-bottom: 4rem;
    display: flex;
    align-items: flex-end;
    border: 1px solid var(--border-color);
    overflow: hidden;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top,
            rgba(12, 12, 12, 1) 0%,
            rgba(12, 12, 12, 0.8) 50%,
            rgba(12, 12, 12, 0.4) 100%);
}

.hero-content {
    position: relative;
    z-index: 10;
    padding: 3rem;
    width: 100%;
    display: flex;
    gap: 3rem;
    align-items: flex-end;
}

.hero-poster-wrapper {
    width: 200px;
    flex-shrink: 0;
    border: 1px solid var(--border-color);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
}

.hero-poster-wrapper img {
    width: 100%;
    display: block;
}

.hero-details {
    flex: 1;
}

.hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.1;
    letter-spacing: -1px;
}

.hero-meta {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.hero-overview {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #cccccc;
    max-width: 800px;
}

/* --- Recommendations Section --- */
.recommendations-container {
    padding-bottom: 4rem;
}

.section-title {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    padding-left: 1rem;
    border-left: 2px solid var(--primary-color);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.movies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 2rem;
}

.movie-card {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    position: relative;
    cursor: pointer;
    transition: all 0.3s ease;
    aspect-ratio: 2/3;
}

.movie-card:hover {
    border-color: var(--primary-color);
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(34, 197, 94, 0.1);
}

.movie-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    opacity: 0.8;
    transition: opacity 0.3s;
}

.movie-card:hover img {
    opacity: 1;
}

.card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(12, 12, 12, 0.95);
    padding: 1rem;
    border-top: 1px solid var(--border-color);
    transform: translateY(100%);
    transition: transform 0.3s ease;
}

.movie-card:hover .card-overlay {
    transform: translateY(0);
}

.movie-card h3 {
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
    color: white;
}

.similarity-score {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--primary-color);
}

.hidden {
    display: none !important;
}

/* --- Loader --- */
.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 4rem;
}

.spinner {
    width: 40px;
    height: 40px;
    border: 2px solid var(--border-color);
    border-top-color: var(--primary-color);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.loading p {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--text-secondary);
    animation: pulse 1.5s infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

@keyframes pulse {

    0%,
    100% {
        opacity: 0.6;
    }

    50% {
        opacity: 1;
    }
}

/* --- Footer --- */
footer {
    margin-top: auto;
    border-top: 1px solid var(--border-color);
    padding: 2rem 0;
}

.footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.project-id {
    font-family: var(--font-mono);
    color: var(--text-secondary);
    font-size: 0.8rem;
}

.footer-meta {
    display: flex;
    gap: 1rem;
}

.badge {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    border-radius: 20px;
    color: var(--text-secondary);
}

/* Responsive */
@media (max-width: 768px) {
    .hero-content {
        flex-direction: column;
        align-items: flex-start;
    }

    .hero-poster-wrapper {
        display: none;
    }

    .tech-specs-banner {
        display: none;
    }
}